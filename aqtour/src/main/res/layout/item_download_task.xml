<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <the.one.aqtour.widge.CustomRoundAngleImageView
        android:id="@+id/cover"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginEnd="15dp"
        app:radius="5dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/qmui_config_color_gray_1"
            tools:text="囧妈"/>

        <com.qmuiteam.qmui.widget.QMUIProgressBar
            android:id="@+id/progressbar"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            app:qmui_background_color="@color/qmui_config_color_gray_9"
            app:qmui_progress_color="?config_color"
            app:qmui_max_value="100"
            android:layout_height="4dp"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/qmui_config_color_gray_4"
            tools:text="100000"/>

    </LinearLayout>

</LinearLayout>