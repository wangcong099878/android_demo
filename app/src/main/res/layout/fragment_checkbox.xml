<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="普通CheckBox"
        android:textColor="@color/qmui_config_color_gray_3"
        android:padding="15dp"
        android:textSize="16sp" />

    <com.qmuiteam.qmui.layout.QMUILinearLayout
        android:id="@+id/ll_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:qmui_borderColor="?attr/qmui_config_color_separator"
        app:qmui_showBorderOnlyBeforeL="true"
        android:layout_margin="10dp"
        android:background="@color/qmui_config_color_white"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选择"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/qmui_config_color_background"
            android:text="这里是不能设置左边的Padding的，不能居中，显示效果非常不好"
            android:padding="20dp"/>

    </com.qmuiteam.qmui.layout.QMUILinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="TheCheckBox"
        android:padding="15dp"
        android:textColor="@color/qmui_config_color_gray_3"
        android:textSize="16sp" />

    <com.qmuiteam.qmui.layout.QMUILinearLayout
        android:id="@+id/ll_round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:qmui_borderColor="?attr/qmui_config_color_separator"
        app:qmui_showBorderOnlyBeforeL="true"
        android:background="@color/qmui_config_color_white"
        android:orientation="horizontal">

        <the.one.base.widge.TheCheckBox
            android:id="@+id/check_box"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="选择"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/qmui_config_color_background"
            android:text="再看看这个效果，居中显示，而且点击效果是一个整个的布局"
            android:padding="20dp"/>

    </com.qmuiteam.qmui.layout.QMUILinearLayout>


</LinearLayout>