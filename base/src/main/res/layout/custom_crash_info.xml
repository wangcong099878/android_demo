<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/error_info_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/iv_close"
    android:background="@color/white">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/mz_titlebar_search_layout_ic_delete_dark"/>

    <ScrollView
        android:id="@+id/error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/iv_close">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/textMessage"
                style="@style/crash_text_style"
                android:textColor="@color/qmui_config_color_gray_3"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/tv_className"
                style="@style/crash_text_style"
                android:layout_marginTop="20dp" />


            <TextView
                android:id="@+id/tv_methodName"
                style="@style/crash_text_style" />


            <TextView
                android:id="@+id/tv_lineNumber"
                style="@style/crash_text_style" />


            <TextView
                android:id="@+id/tv_exceptionType"
                style="@style/crash_text_style" />


            <TextView
                android:id="@+id/tv_time"
                style="@style/crash_text_style" />


            <TextView
                android:id="@+id/tv_model"
                style="@style/crash_text_style" />


            <TextView
                android:id="@+id/tv_brand"
                style="@style/crash_text_style" />


            <TextView
                android:id="@+id/tv_version"
                style="@style/crash_text_style" />

            <TextView
                android:id="@+id/tv_fullException"
                style="@style/crash_text_style"
                android:layout_marginTop="20dp" />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>
