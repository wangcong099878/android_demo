<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/selectableItemBackgroundBorderless">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <the.one.base.widge.SkinImageView
            android:id="@+id/tab_icon_iv"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerInside"
            tools:ignore="MissingPrefix"
            tools:src="@drawable/mz_titlebar_ic_setting_dark" />


        <TextView
            android:id="@+id/tab_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="?attr/qmui_skin_support_tab_size"
            tools:ignore="MissingPrefix" />

    </LinearLayout>

    <View
        android:id="@+id/red_point"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_above="@+id/ll"
        android:layout_marginBottom="-3dp"
        android:layout_toRightOf="@+id/ll"
        android:visibility="gone" />

    <TextView
        android:id="@+id/msg_point_tv"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_above="@+id/ll"
        android:layout_toRightOf="@+id/ll"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="9sp"
        android:visibility="gone" />


</RelativeLayout>