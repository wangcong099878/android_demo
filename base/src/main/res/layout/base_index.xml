<?xml version="1.0" encoding="utf-8"?>
<com.qmuiteam.qmui.widget.QMUIWindowInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:background="?attr/app_skin_background_color_1"
    app:qmui_skin_background="?attr/app_skin_background_color_1">

    <com.qmuiteam.qmui.widget.QMUIViewPager
        android:id="@+id/qmui_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/qmui_skin_segment_tab_height_size"
        android:fitsSystemWindows="true"
        android:overScrollMode="never" />

    <com.qmuiteam.qmui.widget.tab.QMUITabSegment
        android:id="@+id/tab_segment"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_skin_segment_tab_height_size"
        android:layout_gravity="bottom"
        app:qmui_skin_background="?attr/app_skin_background_color_1"
        android:background="?attr/app_skin_background_color_1"
        android:textSize="12sp"
        app:qmui_tab_icon_position="top"
        app:qmui_topDividerColor="?attr/qmui_skin_support_color_separator"
        app:qmui_topDividerHeight="1px" />

</com.qmuiteam.qmui.widget.QMUIWindowInsetLayout>