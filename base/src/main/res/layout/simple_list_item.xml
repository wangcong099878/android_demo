<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingStart="?attr/qmui_content_padding_horizontal">

    <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" />

    <TextView
            android:id="@+id/text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:paddingLeft="?attr/qmui_content_padding_horizontal"
            android:paddingRight="?attr/qmui_content_padding_horizontal"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@color/qmui_config_color_gray_1"
            android:textSize="16sp" />

</LinearLayout>