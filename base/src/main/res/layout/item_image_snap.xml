<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/we_chat_black">

    <com.luck.picture.lib.photoview.PhotoView
            android:id="@+id/photo_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp" />

    <com.luck.picture.lib.widget.longimage.SubsamplingScaleImageView
            android:id="@+id/longImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <com.qmuiteam.qmui.widget.QMUIProgressBar
            android:id="@+id/progressbar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            app:qmui_background_color="@color/qmui_config_color_background"
            android:visibility="gone"
            app:qmui_progress_color="?config_color"
            app:qmui_stroke_width="3dp"
            app:qmui_type="type_circle" />


</FrameLayout>