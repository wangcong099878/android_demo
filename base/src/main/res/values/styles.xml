<resources>

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="QMUI.Compat.NoActionBar">
        <!--主色调-->
        <item name="config_color">@color/app_color_theme_1</item>
        <item name="config_bg_color">@color/qmui_config_color_white</item>
        <!--TheCheckBox选中的颜色 - 默认和主色调一样-->
        <item name="checked_color">?config_color</item>
        <!--普通颜色-->
        <item name="tab_normal_color">@color/qmui_config_color_gray_2</item>
        <!--选中颜色-->
        <item name="tab_select_color">?config_color</item>
        <!--崩溃界面样式-->
        <item name="CrashLayoutStyle">@style/crash_layout_style</item>

        <item name="qmui_topbar_height">40dp</item>
        <item name="qmui_config_color_blue">?config_color</item>
        <item name="QMUITopBarStyle">@style/TopBarDark</item>
        <item name="colorPrimary">?config_color</item>
        <item name="colorPrimaryDark">?config_color</item>
        <item name="colorAccent">?config_color</item>
    </style>

    <style name="TopBarWhite" parent="QMUI.TopBar">
        <item name="qmui_topbar_left_back_drawable_id">@drawable/mz_titlebar_ic_back_dark</item>
    </style>

    <style name="TopBarDark" parent="QMUI.TopBar">
        <item name="qmui_topbar_title_color">@color/qmui_config_color_white</item>
        <item name="qmui_topbar_subtitle_color">@color/qmui_config_color_white</item>
        <item name="qmui_topbar_text_btn_color_state_list">@color/qmui_config_color_white</item>
        <item name="qmui_topbar_left_back_drawable_id">@drawable/mz_titlebar_ic_back_light</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="StartAppTheme" parent="TranslucentTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TranslucentTheme" parent="BaseTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="NoTitleTheme" parent="BaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogActivityTheme" parent="StartAppTheme">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="PopAnimStyle">
        <item name="android:windowEnterAnimation">@anim/anim_from_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/anim_from_top_out</item>
    </style>

    <style name="custom_bottom_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/qmui_config_color_blue</item>
        <item name="android:background">?attr/qmui_s_list_item_bg_with_border_bottom_inset_left</item>
    </style>

    <style name="DateTimePickerDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
    </style>


    <style name="crash_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/qmui_config_color_gray_3</item>
    </style>

    <style name="crash_layout_style">
        <item name="crash_drawable">@drawable/ic_crash</item>
        <item name="crash_report_tip">@string/crash_report_tip</item>
        <item name="crash_title">@string/crash_title</item>
        <item name="crash_restart">@string/restart</item>
        <item name="crash_show_info">@string/crash_show_info</item>
    </style>



</resources>
