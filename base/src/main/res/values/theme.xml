<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 主色调 -->
    <attr name="app_skin_primary_color" format="reference|color"/>
    <!-- 主背景颜色 -->
    <attr name="app_skin_background_color_1" format="color|reference" />
    <!-- 次背景颜色 -->
    <attr name="app_skin_background_color_2" format="color|reference"/>
    <!-- 主字体颜色 -->
    <attr name="app_skin_text_color_1"  format="color|reference"/>
    <!-- 次字体颜色 -->
    <attr name="app_skin_text_color_2" format="color|reference"/>

    <!-- StatusLayout -->
    <attr name="app_skin_status_layout_loading_text_color" format="reference|color"/>
    <attr name="app_skin_status_layout_btn_background_color" format="color|reference"/>
    <attr name="app_skin_status_layout_btn_text_color" format="color|reference"/>
    <attr name="app_skin_status_layout_btn_text_size" format="dimension|reference"/>
    <attr name="app_skin_status_layout_title_size" format="dimension|reference"/>
    <attr name="app_skin_status_layout_content_size" format="dimension|reference"/>
    <attr name="app_skin_status_layout_loading_tips_size" format="dimension|reference"/>
    <attr name="app_skin_status_layout_error_drawable" format="reference"/>
    <attr name="app_skin_status_layout_empty_drawable" format="reference"/>
    <attr name="app_skin_status_layout_net_error_drawable" format="reference"/>
    <attr name="app_skin_status_layout_no_net_drawable" format="reference"/>

    <attr name="app_skin_btn_gray_background_color" format="reference|color"/>
    <attr name="app_skin_btn_tips_background_color" format="reference|color"/>

    <!--数量选择器按钮背景-->
    <attr name="app_skin_number_picker_btn_background_color" format="reference|color"/>
    <attr name="app_skin_number_picker_btn_text_color" format="reference|color"/>

    <!--TAB指示器字体大小-->
    <attr name="app_skin_tab_indicator_text_size" format="reference|dimension"/>

    <!-- 自定义加载更多 -->
    <attr name="app_skin_loadmore_text_color" format="reference|color"/>
    <attr name="app_skin_loadmore_complete_text" format="reference|string"/>
    <attr name="app_skin_loadmore_fail_text" format="reference|string"/>
    <attr name="app_skin_loadmore_end_text" format="reference|string"/>
    <attr name="app_skin_loadmore_loading_text" format="reference|string"/>
    <attr name="app_skin_loadmore_text_size" format="reference|dimension"/>
    <attr name="app_skin_loadmore_separator_color" format="reference|color"/>
    <attr name="app_skin_loadmore_separator_margin" format="dimension|reference"/>

    <!--TheCheckBox选中的颜色 - 默认和主色调一样-->
    <attr name="app_skin_checked_color" format="reference|color" />
    <!--Glide加载错误图片-->
    <attr name="app_skin_glide_fail_drawable" format="reference"/>
    <!--崩溃界面样式-->
    <attr name="CrashLayoutStyle" format="reference"/>

    <!--QMUI-->
    <attr name="qmui_skin_support_topbar_back_drawable" format="reference"/>// 返回按钮图标
    <attr name="qmui_skin_support_tab_size" format="reference|dimension"/>// TabSegment字体大小
    <attr name="qmui_skin_segment_tab_height_size" format="reference|dimension"/> // QMUISegment高度

    <!-- 基础的相同的配置 -->
    <style name="BaseTheme" parent="QMUI.Compat.NoActionBar">

        <!--App-->
        <item name="app_skin_primary_color">@color/app_color_theme_6</item>
        <item name="colorAccent">?attr/app_skin_primary_color</item>
        <item name="colorPrimary">?attr/app_skin_primary_color</item>
        <item name="app_skin_checked_color">?attr/app_skin_primary_color</item>
        <item name="app_skin_background_color_1">@color/white</item>
        <item name="app_skin_background_color_2">@color/qmui_config_color_background</item>
        <item name="app_skin_text_color_1">@color/qmui_config_color_gray_1</item>
        <item name="app_skin_text_color_2">@color/qmui_config_color_gray_3</item>
        <item name="app_skin_glide_fail_drawable">@drawable/svg_image_fail</item>
        <item name="CrashLayoutStyle">@style/crash_layout_style</item>

        <item name="app_skin_status_layout_loading_text_color">@color/qmui_config_color_gray_2</item>
        <item name="app_skin_status_layout_btn_background_color">@color/qmui_config_color_gray_7</item>
        <item name="app_skin_status_layout_btn_text_color">@color/qmui_config_color_white</item>
        <item name="app_skin_status_layout_btn_text_size">15sp</item>
        <item name="app_skin_status_layout_title_size">15sp</item>
        <item name="app_skin_status_layout_content_size">14sp</item>
        <item name="app_skin_status_layout_loading_tips_size">14sp</item>
        <item name="app_skin_status_layout_error_drawable">@drawable/status_loading_view_loading_fail</item>
        <item name="app_skin_status_layout_empty_drawable">@drawable/status_search_result_empty</item>
        <item name="app_skin_status_layout_net_error_drawable">@drawable/status_loading_view_network_error</item>
        <item name="app_skin_status_layout_no_net_drawable">@drawable/status_loading_view_no_network</item>

        <item name="app_skin_btn_gray_background_color">@color/qmui_config_color_gray_6</item>
        <item name="app_skin_btn_tips_background_color">@color/qmui_config_color_red</item>

        <item name="app_skin_number_picker_btn_background_color">@color/qmui_config_color_background</item>
        <item name="app_skin_number_picker_btn_text_color">@color/qmui_config_color_gray_2</item>


        <!--QMUI-->
        <item name="qmui_topbar_height">50dp</item>
        <item name="qmui_dialog_min_width">300dp</item>
        <item name="qmui_dialog_max_width">350dp</item>
        <item name="qmui_skin_support_tab_size">12sp</item>
        <item name="qmui_skin_support_topbar_back_drawable">@drawable/mz_titlebar_ic_back_dark</item>
        <item name="qmui_skin_support_tab_sign_count_view_bg_color">@color/qmui_config_color_red</item>
        <item name="qmui_skin_support_tab_sign_count_view_text_color">@color/qmui_config_color_white</item>
        <item name="qmui_skin_support_tab_bg">@color/qmui_config_color_white</item>
        <item name="qmui_skin_progress_color">?attr/app_skin_primary_color</item>
        <item name="qmui_skin_support_common_list_icon_tint_color">?attr/app_skin_primary_color</item>

        <item name="qmui_skin_support_color_background_pressed">@color/qmui_config_color_gray_7</item>

        <item name="qmui_skin_support_tab_normal_color">@color/qmui_config_color_gray_2</item>
        <item name="qmui_skin_support_tab_selected_color">?attr/app_skin_primary_color</item>
        <item name="app_skin_tab_indicator_text_size">15sp</item>

        <item name="qmui_skin_support_empty_view_btn_bg_color">?attr/app_skin_primary_color</item>
        <item name="qmui_skin_support_empty_view_btn_text_color">@color/qmui_config_color_white</item>


        <item name="qmui_skin_segment_tab_height_size">@dimen/home_tab_height</item>

        <item name="QMUITopBarStyle">@style/BaseTopBarStyle</item>
        <item name="QMUITabSegmentStyle">@style/BaseSegmentStyle</item>

        <!--  LoadMore  -->
        <item name="app_skin_loadmore_loading_text">@string/loadmore_loading</item>
        <item name="app_skin_loadmore_complete_text">@string/loadmore_compelete</item>
        <item name="app_skin_loadmore_end_text">@string/loadmore_end</item>
        <item name="app_skin_loadmore_fail_text">@string/loadmore_fail</item>
        <item name="app_skin_loadmore_text_size">14sp</item>
        <item name="app_skin_loadmore_text_color">@color/qmui_config_color_gray_3</item>
        <item name="app_skin_loadmore_separator_color">@color/qmui_config_color_separator</item>
        <item name="app_skin_loadmore_separator_margin">20dp</item>

    </style>

    <style name="TopBarWhiteTheme" parent="BaseTheme">
        <!--QMUI-->
        <item name="qmui_skin_support_topbar_bg">@color/qmui_config_color_white</item>
        <item name="qmui_skin_support_topbar_title_color">@color/qmui_config_color_gray_1</item>
        <item name="qmui_skin_support_topbar_subtitle_color">@color/qmui_config_color_gray_2</item>
        <item name="qmui_skin_support_topbar_text_btn_color_state_list">?attr/app_skin_primary_color</item>
        <item name="qmui_skin_support_topbar_image_tint_color">@color/qmui_config_color_gray_1</item>
        <item name="qmui_skin_support_topbar_separator_color">@color/qmui_config_color_transparent</item>
        <item name="qmui_skin_support_topbar_back_drawable">@drawable/mz_titlebar_ic_back_dark</item>
    </style>

    <style name="TopBarDarkTheme" parent="BaseTheme">
        <!--QMUI-->
        <item name="qmui_skin_support_topbar_title_color">@color/qmui_config_color_white</item>
        <item name="qmui_skin_support_topbar_subtitle_color">@color/qmui_config_color_white</item>
        <item name="qmui_skin_support_topbar_image_tint_color">@color/qmui_config_color_white</item>
        <item name="qmui_skin_support_topbar_separator_color">@color/qmui_config_color_transparent</item>
        <item name="qmui_skin_support_topbar_back_drawable">@drawable/mz_titlebar_ic_back_light</item>
    </style>

</resources>